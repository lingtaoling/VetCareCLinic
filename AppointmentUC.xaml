<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetClinic"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="VetClinic.AppointmentUC"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="0,0,0,10">
        <Label Content="Appointments" FontSize="28" HorizontalAlignment="Left" Margin="215,23,0,0" VerticalAlignment="Top" Width="223" Height="49"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="16,86,0,0" VerticalAlignment="Top" Width="47"/>
        <Label Content="Pets' Name:" HorizontalAlignment="Left" Margin="16,117,0,0" VerticalAlignment="Top" Width="78"/>
        <Label Content="Doctor:" HorizontalAlignment="Left" Margin="16,148,0,0" VerticalAlignment="Top" Width="52"/>
        <Label Content="Notes:" HorizontalAlignment="Left" Margin="16,179,0,0" VerticalAlignment="Top" Width="47"/>
        <Label Content="Date:" HorizontalAlignment="Left" Margin="16,234,0,0" VerticalAlignment="Top" Width="39"/>
        <Label Content="Time:" HorizontalAlignment="Left" Margin="16,271,0,0" VerticalAlignment="Top" Width="40"/>
        <ComboBox x:Name="ComboName" HorizontalAlignment="Left" Margin="122,86,0,0"   VerticalAlignment="Top" Width="133" SelectedItem="{Binding Owner}" SelectionChanged="ComboName_SelectionChanged"
                  DisplayMemberPath="name"
                  SelectedValuePath="id"/>
        <ComboBox x:Name="ComboPet" HorizontalAlignment="Left" Margin="122,117,0,0"   VerticalAlignment="Top" Width="133" SelectedItem="{Binding Pet}"
                  DisplayMemberPath="name"
                  SelectedValuePath="id"/>
        <ComboBox x:Name="ComboVet" HorizontalAlignment="Left" Margin="122,148,0,0"  VerticalAlignment="Top" Width="133" SelectedItem="{Binding User}" 
                  DisplayMemberPath="name"
                  SelectedValuePath="id"/>
        <DatePicker x:Name ="DpAppointment" HorizontalAlignment="Left" Margin="122,234,0,0" VerticalAlignment="Top" Width="22"/>


        <Button Content="Submit" HorizontalAlignment="Left" Margin="122,334,0,0" Click="BtnAppointment_Click" VerticalAlignment="Top" Width="86"/>
        <materialDesign:TimePicker Name ="TpAppointments" HorizontalAlignment="Left" Margin="122,271,0,0" VerticalAlignment="Top" Width="22"/>
        <ListView Name="LvAppointment" Margin="295,77,10,27">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Owner" Width="120"  DisplayMemberBinding="{Binding OwnerName}" />
                    <GridViewColumn Header="Pet" Width="90" DisplayMemberBinding="{Binding petName}" />
                    <GridViewColumn Header="Vet" Width="90" DisplayMemberBinding="{Binding doctorName}" />
                    <GridViewColumn Header="Notes" Width="100" DisplayMemberBinding="{Binding notes}" />
                    <GridViewColumn Header="When" Width="100" DisplayMemberBinding="{Binding when, StringFormat='\d\t'}" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox HorizontalAlignment="Left" Margin="122,183,0,0" TextWrapping="Wrap" Name="TbxNotes" VerticalAlignment="Top" Width="133"/>



    </Grid>
</UserControl>
